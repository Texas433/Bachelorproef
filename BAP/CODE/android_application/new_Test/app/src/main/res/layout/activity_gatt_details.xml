<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GattDetailsActivity">

    <!-- TextView voor het tonen van de gelezen data -->
    <TextView
            android:id="@+id/characteristicData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kenmerk Data"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button om opnieuw een kenmerk te lezen -->
    <Button
            android:id="@+id/readButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lees Kenmerk"
            android:onClick="readCharacteristicAgain"
            app:layout_constraintTop_toBottomOf="@id/characteristicData"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
